# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Matches files with a .cpp, .h, or .hpp extension
[*.{cpp,h,hpp}]
indent_style = space
indent_size = 2

# Specific settings for Makefiles
[Makefile]
indent_style = tab

# JSON files
[*.json]
indent_size = 2
